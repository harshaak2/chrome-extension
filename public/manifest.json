{
  "manifest_version": 3,
  "name": "QB it",
  "version": "1.0",

  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "vite.svg"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "options_page": "options.html",

  "host_permissions": ["<all_urls>"],
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "mac": "Command+I"
      },
      "description": "Open the extension popup"
    }
  }
}