{
  "manifest_version": 3,
  "name": "QB it",
  "version": "1.0",

  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "qb_icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "options_page": "options.html",

  "host_permissions": ["<all_urls>"],
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "qb_icon.svg", "cursor-styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}